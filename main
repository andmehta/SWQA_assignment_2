def show_menu():
    print("\"bmi\": to calculate BMI and determine if underweight, normal, or overweight")
    print("\"end\": to close program\n")


def main():
    print("welcome to the main menu\n")

    option = "placeholder"
    print("type \"menu\" to see all available options")
    while option != "end":
        option = input("what would you like to do?: ")

        if option == "menu":
            show_menu()

        if option == "bmi":
            weight = input("What is your weight?: ")
            height_f = input("What is your height in feet?: ")
            height_in = input("What is your height in inches?: ")
            # bmi_value = bmi(height_f, height_in, weight)


if __name__ == "__main__":
    main()
